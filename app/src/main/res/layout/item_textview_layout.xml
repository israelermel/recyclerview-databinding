<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="TextViewBindingRD">

        <variable
            name="listener"
            type="com.example.myapplication.recyclerview.base.OnItemClickBottomSheet" />

        <variable
            name="obj"
            type="com.example.myapplication.recyclerview.RowRecyclerView" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> listener.onSelected(obj)}"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="false"
            android:text="@{obj.nome}" />

    </LinearLayout>
</layout>
